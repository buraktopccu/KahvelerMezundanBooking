@model IEnumerable<KahvelerMezundanBooking.Models.MezunDetails>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Mezun_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mezun_Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateAndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MezunPicture)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Mezun_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mezun_Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateAndTime)
                </td>
                <td>
                    <img src="@item.MezunPicture" width="100" height="100" asp-append-version="true" />
                </td>
                <td>
                    <a asp-action="BookNow" asp-route-id="@item.id">Koltuğunuzu Rezerve Edin!</a> |

                </td>
            </tr>
        }
    </tbody>
</table>
